<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.2

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="de.mbws.common.data.generated.Item" 
    table="item"
    lazy="false"
>

    <id
        name="id"
        type="java.lang.Long"
        column="ID"
    >
    
        <generator class="assigned" />
    </id>

    <property
        name="name"
        type="java.lang.String"
        column="NAME"
        not-null="true"
        length="45"
    />
    <property
        name="maxCondition"
        type="int"
        column="MAX_CONDITION"
        not-null="true"
        length="10"
    />
    <property
        name="weight"
        type="long"
        column="WEIGHT"
        not-null="true"
        length="10"
    />
    <property
        name="size"
        type="long"
        column="SIZE"
        not-null="true"
        length="10"
    />
    <property
        name="description"
        type="java.lang.String"
        column="DESCRIPTION"
        not-null="true"
        length="65535"
    />
    <property
        name="modelName"
        type="java.lang.String"
        column="MODEL_NAME"
        length="65535"
    />
    <property
        name="iconName"
        type="java.lang.String"
        column="ICON_NAME"
        length="65535"
    />

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to CharacterItemMapping -->

    <set
        name="characterItemMappings"
        lazy="true"
        inverse="true"
		cascade="all"

    >
        <key>
            <column name="ITEM_ID" />
        </key>
        
        <one-to-many 
            class="de.mbws.common.data.generated.CharacterItemMapping"
        />
    </set>
    <!-- bi-directional many-to-one association to ItemType -->
    <many-to-one
        name="itemType"
        class="de.mbws.common.data.generated.ItemType"
        not-null="true"
    >
        <column name="ITEM_TYPE_ID" />
    </many-to-one>

</class>
</hibernate-mapping>
