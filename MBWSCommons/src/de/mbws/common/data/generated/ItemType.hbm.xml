<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.2

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="de.mbws.common.data.generated.ItemType" 
    table="item_type"
    lazy="false"
>

    <id
        name="id"
        type="java.lang.Integer"
        column="id"
    >
    
        <generator class="assigned" />
    </id>

    <property
        name="name"
        type="java.lang.String"
        column="name"
        not-null="true"
        length="255"
    />
    <property
        name="containersize"
        type="int"
        column="containersize"
        not-null="true"
        length="10"
    />
    <property
        name="wearable"
        type="byte"
        column="wearable"
        not-null="true"
        length="1"
    />

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to Item -->

    <set
        name="items"
        lazy="true"
        inverse="true"
		cascade="all"

    >
        <key>
            <column name="item_type_id" />
        </key>
        
        <one-to-many 
            class="de.mbws.common.data.generated.Item"
        />
    </set>

</class>
</hibernate-mapping>
