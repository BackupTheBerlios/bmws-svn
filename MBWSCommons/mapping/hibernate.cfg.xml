<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="show_sql">true</property>
		<!-- local connection properties -->
		<property name="hibernate.connection.url">
			jdbc:mysql://localhost:3306/game
		</property>
		<property name="hibernate.connection.driver_class">
			com.mysql.jdbc.Driver
		</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password" />
		<!-- property name="hibernate.connection.pool_size"></property -->
		<!-- dialect for MySQL -->
		<property name="dialect">
			org.hibernate.dialect.MySQLInnoDBDialect
		</property>
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>		
		<property name="hibernate.show_sql">false</property>
		<property name="hibernate.transaction.factory_class">
			org.hibernate.transaction.JDBCTransactionFactory
		</property>
		<mapping resource="de/mbws/common/data/generated/Account.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/Characterdata.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/CharacterItemMapping.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/CharacterSkillMapping.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/CharacterStatus.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/CharacterVisualappearance.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/CharacterWorldobjectMapping.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/Configuration.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/Item.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/ItemType.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/Map.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/Npc.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/NpcSkillMapping.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/NpcStatus.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/NpcWorldobjectMapping.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/Race.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/Skill.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/SkillGroup.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/SkillRaceMapping.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/Worldobject.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/WorldobjectType.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/Zoneserver.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/ZoneserverMapMapping.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/Language.hbm.xml" />
		<mapping resource="de/mbws/common/data/generated/LanguageTextMapping.hbm.xml" />
	</session-factory>
</hibernate-configuration>
