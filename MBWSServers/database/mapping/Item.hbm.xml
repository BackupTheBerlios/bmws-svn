<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.2

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="de.mbws.server.data.db.generated.Item" 
    table="item"
    lazy="false"
>

    <id
        name="id"
        type="java.lang.Long"
        column="id"
    >
    
        <generator class="assigned" />
    </id>

    <property
        name="name"
        type="java.lang.String"
        column="name"
        not-null="true"
        length="45"
    />
    <property
        name="maxCondition"
        type="int"
        column="max_condition"
        not-null="true"
        length="10"
    />
    <property
        name="weight"
        type="long"
        column="weight"
        not-null="true"
        length="10"
    />
    <property
        name="size"
        type="long"
        column="size"
        not-null="true"
        length="10"
    />
    <property
        name="description"
        type="java.lang.String"
        column="description"
        not-null="true"
        length="65535"
    />
    <property
        name="modelName"
        type="java.lang.String"
        column="model_name"
        length="65535"
    />
    <property
        name="iconName"
        type="java.lang.String"
        column="icon_name"
        length="65535"
    />

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to CharacterItemMapping -->

    <set
        name="characterItemMappings"
        lazy="true"
        inverse="true"
		cascade="all"

    >
        <key>
            <column name="item_id" />
        </key>
        
        <one-to-many 
            class="de.mbws.server.data.db.generated.CharacterItemMapping"
        />
    </set>
    <!-- bi-directional many-to-one association to ItemType -->
    <many-to-one
        name="itemType"
        class="de.mbws.server.data.db.generated.ItemType"
        not-null="true"
    >
        <column name="item_type_id" />
    </many-to-one>

</class>
</hibernate-mapping>
