<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.2

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="de.mbws.server.data.db.generated.Account" 
    table="account"
    lazy="false"
>

    <id
        name="username"
        type="java.lang.String"
        column="username"
    >
    
        <generator class="assigned" />
    </id>

    <property
        name="password"
        type="java.lang.String"
        column="password"
        not-null="true"
        length="200"
    />
    <property
        name="emailaddress"
        type="java.lang.String"
        column="emailaddress"
        not-null="true"
        length="45"
    />

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to Characterdata -->

    <set
        name="characterdatas"
        lazy="true"
        inverse="true"
		cascade="all"

    >
        <key>
            <column name="account_username" />
        </key>
        
        <one-to-many 
            class="de.mbws.server.data.db.generated.Characterdata"
        />
    </set>

</class>
</hibernate-mapping>
