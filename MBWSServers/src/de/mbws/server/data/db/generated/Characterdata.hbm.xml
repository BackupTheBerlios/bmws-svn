<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.2

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="de.mbws.server.data.db.generated.Characterdata" 
    table="characterdata"
    lazy="false"
>

    <id
        name="id"
        type="java.lang.Long"
        column="id"
    >
    
        <generator class="assigned" />
    </id>

    <property
        name="charactername"
        type="java.lang.String"
        column="charactername"
        not-null="true"
        length="30"
    />
    <property
        name="gender"
        type="java.lang.String"
        column="gender"
        not-null="true"
        length="1"
    />
    <property
        name="health"
        type="int"
        column="health"
        not-null="true"
        length="10"
    />
    <property
        name="mana"
        type="int"
        column="mana"
        not-null="true"
        length="10"
    />
    <property
        name="stamina"
        type="int"
        column="stamina"
        not-null="true"
        length="10"
    />
    <property
        name="age"
        type="short"
        column="age"
        not-null="true"
        length="5"
    />
    <property
        name="strength"
        type="int"
        column="strength"
        not-null="true"
        length="10"
    />
    <property
        name="intelligence"
        type="int"
        column="intelligence"
        not-null="true"
        length="10"
    />
    <property
        name="dexterity"
        type="int"
        column="dexterity"
        not-null="true"
        length="10"
    />
    <property
        name="constitution"
        type="int"
        column="constitution"
        not-null="true"
        length="10"
    />

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to Race -->
    <many-to-one
        name="race"
        class="de.mbws.server.data.db.generated.Race"
        not-null="true"
    >
        <column name="race_id" />
    </many-to-one>
    <!-- bi-directional one-to-one association to CharacterStatus -->
    <one-to-one
        name="characterStatus"
        class="de.mbws.server.data.db.generated.CharacterStatus"
        outer-join="auto"
    />
    <!-- bi-directional one-to-many association to CharacterSkillMapping -->

    <set
        name="characterSkillMappings"
        lazy="true"
        inverse="true"
		cascade="all"

    >
        <key>
            <column name="characterdata_id" />
        </key>
        
        <one-to-many 
            class="de.mbws.server.data.db.generated.CharacterSkillMapping"
        />
    </set>
    <!-- bi-directional one-to-one association to CharacterVisualappearance -->
    <one-to-one
        name="characterVisualappearance"
        class="de.mbws.server.data.db.generated.CharacterVisualappearance"
        outer-join="auto"
    />
    <!-- bi-directional one-to-many association to CharacterItemMapping -->

    <set
        name="characterItemMappings"
        lazy="true"
        inverse="true"
		cascade="all"

    >
        <key>
            <column name="characterdata_id" />
        </key>
        
        <one-to-many 
            class="de.mbws.server.data.db.generated.CharacterItemMapping"
        />
    </set>
    <!-- bi-directional one-to-many association to CharacterWorldobjectMapping -->

    <set
        name="characterWorldobjectMappings"
        lazy="true"
        inverse="true"
		cascade="all"

    >
        <key>
            <column name="characterdata_id" />
        </key>
        
        <one-to-many 
            class="de.mbws.server.data.db.generated.CharacterWorldobjectMapping"
        />
    </set>
    <!-- bi-directional many-to-one association to Account -->
    <many-to-one
        name="account"
        class="de.mbws.server.data.db.generated.Account"
        not-null="true"
    >
        <column name="account_username" />
    </many-to-one>

</class>
</hibernate-mapping>
